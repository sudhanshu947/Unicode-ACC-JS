{
    "version": 2,
    "builds": [
        { "src": "public/**/*", "use": "@vercel/static" },
        { "src": "api/*.js", "use": "@vercel/node" }
    ],
    "rewrites": [
        { "source": "/api/:path*", "destination": "/api/:path*" },
        { "source": "/:path*", "destination": "/public/:path*" }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:;"
                }
            ]
        }
    ]
}